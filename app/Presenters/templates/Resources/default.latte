{block content}
<h1>Resources</h1>

{foreach $resources as $id => $resource}
	<p>
		{$resource->name} | <a n:href=":edit $resource->id">Edit</a>
	</p>
{/foreach}

<a n:href="showResourceForm!" class="ajax">Add new resource</a>
{snippet resourceFormSnippet}
	{if !empty($showResourceForm)}
		<div class="card"><div class="card-body">
			{control resourceForm}
		</div></div>
	{/if}
{/snippet}
{/block}

