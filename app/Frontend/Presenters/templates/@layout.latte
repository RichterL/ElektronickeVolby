<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
 	<link rel="icon" href="/favicon.ico" type="image/x-icon">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
	<link rel="stylesheet" href="/css/custom.css">
	<title>{ifset title}{include title|stripHtml} | {/ifset}UTB voting system</title>
</head>

<body>
	<div class="d-flex" id="wrapper">
		<div id="page-content-wrapper">
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
			 	<a class="navbar-brand" n:href="Homepage:">Navbar</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
          			<span class="navbar-toggler-icon"></span>
        		</button>
				<div class="navbar-collapse collapse" id="navbarContent" style="">
					<ul class="navbar-nav ml-auto mt-2 mt-lg-0">
						<li class="nav-item active">
						<a class="nav-link" n:href="Homepage:">Home <span class="sr-only">(current)</span></a>
						</li>
						<li class="nav-item">
						<a class="nav-link" n:href="Sign:out">Sign out</a>
						</li>
						<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							Dropdown
						</a>
						<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
							<a class="dropdown-item" href="#">Action</a>
							<a class="dropdown-item" n:href="Sign:out">Sign out</a>
							<div class="dropdown-divider"></div>
							<a class="dropdown-item" href="#">Something else here</a>
						</div>
						</li>
					</ul>
				</div>
			</nav>
			<div class="container-fluid">
				{include content}
			</div>
		</div>
	</div>
	<script src="/js/Naja.js"></script>
	<script src="/js/Naja.ext.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/nette-forms@3.0.4/src/assets/netteForms.min.js"></script>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.15/dist/js/bootstrap-select.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
	<script type="module">
		naja.registerExtension(new ForceRedirectExtension());
		naja.registerExtension(new LoadingIndicatorExtension());
		naja.registerExtension(new ModalExtension());
		document.addEventListener('DOMContentLoaded', () => naja.initialize());
	</script>
	<script>
		$(function () {
			$('.modal-backdrop').remove();

			toastr.options = {
				"closeButton": true,
				"debug": false,
				"newestOnTop": true,
				"progressBar": true,
				"positionClass": "toast-top-center",
				"preventDuplicates": false,
				"onclick": null,
				"showDuration": "300",
				"hideDuration": "1000",
				"timeOut": "5000",
				"extendedTimeOut": "1000",
				"showEasing": "swing",
				"hideEasing": "linear",
				"showMethod": "fadeIn",
				"hideMethod": "fadeOut"
				}


		});
	</script>
	{snippet scripts}
		{block scripts}
		{/block}
	{/snippet}
	{snippet flashes}
		<script>
			{foreach $flashes as $flash}
				toastr.{$flash->type|noescape}({$flash->message})
			{/foreach}
		</script>
	{/snippet}
	{snippet modal}
        {ifset #modal}
			{include modal}
		{/ifset}
	{/snippet}
</body>
</html>

{define spinner}
	<div class="ajax-spinner justify-content-center" style="display:none">
		<div class="spinner-grow text-warning" role="status">
			<span class="sr-only">Loading...</span>
		</div>
	</div>
	<div class="ajax-spinner-backdrop" style="display:none"></div>
{/define}
